<div class="yui-g">
  <h1>Edit <%= @product.name %></h1>
  <% form_for :product, @product, :url => admin_product_path(@product), :html => { :method => :put } do |f| %>
    <%= render :partial => 'admin/products/form', :locals => { :f => f } %>
    <br/>
    <%= submit_tag :update %>
  <% end %>
</div>
